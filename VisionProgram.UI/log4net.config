<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--FATAL（致命错误）、ERROR（一般错误）、WARN（警告）、INFO（一般信息）、DEBUG（调试信息）；指定不输出某一种类，就屏蔽appender-ref-->
  <log4net>
    <!--错误日志类-->
    <logger name="logfatal">
      <!--日志类的名字-->
      <level value="FATAL" />
      <!--定义记录的日志级别-->
      <appender-ref ref="FatalAppender" />
      <!--记录到哪个介质中去-->
    </logger>
    <!--错误日志类-->
    <logger name="logerror">
      <!--日志类的名字-->
      <level value="ERROR" />
      <!--定义记录的日志级别-->
      <appender-ref ref="ErrorAppender" />
      <!--记录到哪个介质中去-->
    </logger>
    <!--信息日志类-->
    <logger name="loginfo">
      <level value="INFO" />
      <appender-ref ref="InfoAppender" />
    </logger>

    <!--信息日志类-->
    <logger name="logdebug">
      <level value="DEBUG" />
      <appender-ref ref="debugAppender" />
    </logger>

    <!--错误日志附加介质-->
    <appender name="FatalAppender" type="log4net.Appender.RollingFileAppender">
      <!-- name属性指定其名称,type则是log4net.Appender命名空间的一个类的名称,意思是,指定使用哪种介质-->
      <param name="File" value="Logger\\LogFatal\\" />
      <!--日志输出到exe程序这个相对目录下-->
      <param name="AppendToFile" value="true" />
      <!--输出的日志不会覆盖以前的信息-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--多进程日志文件共用-->
      <param name="MaxSizeRollBackups" value="100" />
      <!--备份文件的个数-->
      <param name="MaxFileSize" value="10240" />
      <!--当个日志文件的最大大小-->
      <param name="StaticLogFileName" value="false" />
      <!--是否使用静态文件名-->
      <datePattern value="yyyyMMdd" />
      <param name="DatePattern" value="yyyyMMdd'_log.log'" />
      <!--生成格式；每天生成一个日志-->
      <param name="RollingStyle" value="Date" />
      <!--文件创建的方式，这里是以Date方式创建   设置为Date后，文件最大大小以及备份数量全部失效-->
      <!--错误日志布局-->
      <!--Layout.PatternLayout布局线程安全。该类型的 Public static 成员对多线程操作是安全的-->
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n＝＝＝＝＝＝＝＝＝＝
%n【日志级别】%-5level
%n【记录时间】%date
%n【线程编号】[%thread]
%n【错误描述】%message
%n【错误详情】%newline"  />
      </layout>
    </appender>


    <!--错误日志附加介质-->
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender">
      <!-- name属性指定其名称,type则是log4net.Appender命名空间的一个类的名称,意思是,指定使用哪种介质-->
      <param name="File" value="Logger\\LogError\\" />
      <!--日志输出到exe程序这个相对目录下-->
      <param name="AppendToFile" value="true" />
      <!--输出的日志不会覆盖以前的信息-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--多进程日志文件共用-->
      <param name="MaxSizeRollBackups" value="100" />
      <!--备份文件的个数-->
      <param name="MaxFileSize" value="10240" />
      <!--当个日志文件的最大大小-->
      <param name="StaticLogFileName" value="false" />
      <!--是否使用静态文件名-->
      <datePattern value="yyyyMMdd" />
      <param name="DatePattern" value="yyyyMMdd'_log.log'" />
      <!--生成格式；每天生成一个日志-->
      <param name="RollingStyle" value="Date" />
      <!--文件创建的方式，这里是以Date方式创建-->
      <!--错误日志布局-->
      <!--Layout.PatternLayout布局线程安全。该类型的 Public static 成员对多线程操作是安全的-->
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n＝＝＝＝＝＝＝＝＝＝
%n【日志级别】%-5level
%n【记录时间】%date
%n【线程编号】[%thread]
%n【错误描述】%message
%n【错误详情】%newline"  />
      </layout>
    </appender>

    <!--信息日志附加介质-->
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logger\\LogInfo\\" />
      <param name="AppendToFile" value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--多进程日志文件共用-->
      <param name="MaxFileSize" value="10240" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="StaticLogFileName" value="false" />
      <datePattern value="yyyyMMdd-HH" />
      <param name="DatePattern" value="yyyyMMdd\\HH'_log.log'" />
      <!--生成格式；每天生成一个日志-->
      <param name="RollingStyle" value="Date" />
      <!--信息日志布局-->
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n日志时间：%d [%t] %n日志级别：%-5p %n日 志 类：%c [%M] %n%m %n"  />
      </layout>
    </appender>

    <!--信息日志附加介质-->
    <appender name="debugAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logger\\LogDebug\\" />
      <param name="AppendToFile" value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!--多进程日志文件共用-->
      <param name="MaxFileSize" value="10240" />
      <param name="MaxSizeRollBackups" value="100" />
      <param name="StaticLogFileName" value="false" />
      <datePattern value="yyyyMMdd-HH" />
      <param name="DatePattern" value="yyyyMMdd\\HH'_log.log'" />
      <!--生成格式；每天生成一个日志-->
      <param name="RollingStyle" value="Date" />
      <!--信息日志布局-->
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%n日志时间：%d [%t] %n日志级别：%-5p %n日 志 类：%c [%M] %n%m %n"  />
      </layout>
    </appender>
  </log4net>

</configuration>